<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/addNewStudent"
        android:layout_height="55dp"
        android:textSize="20sp"
        android:backgroundTint="#3D97DC"
        app:cornerRadius="?attr/listPreferredItemHeight"
        android:textAllCaps="false"
        android:fontFamily="sans-serif"
        android:layout_width="250dp"
        android:layout_marginTop="136dp"
        android:text="Add New Student"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/viewStudentRecord"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:textSize="20sp"
        android:backgroundTint="#3D97DC"
        app:cornerRadius="?attr/listPreferredItemHeight"
        android:textAllCaps="false"
        android:fontFamily="sans-serif"
        android:layout_marginTop="36dp"
        android:text="View Student"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addNewStudent" />

    <Button
        android:id="@+id/viewAllStudents"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:textSize="20sp"
        android:backgroundTint="#3D97DC"
        app:cornerRadius="?attr/listPreferredItemHeight"
        android:textAllCaps="false"
        android:fontFamily="sans-serif"
        android:layout_marginTop="36dp"
        android:text="View All Students"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteStudent" />

    <Button
        android:id="@+id/updateStudentRecord"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:textSize="20sp"
        android:backgroundTint="#3D97DC"
        app:cornerRadius="?attr/listPreferredItemHeight"
        android:textAllCaps="false"
        android:fontFamily="sans-serif"

        android:layout_marginTop="32dp"
        android:text="Update Student"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewStudentRecord" />

    <Button
        android:id="@+id/deleteStudent"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#3D97DC"
        android:fontFamily="sans-serif"
        android:text="Delete Student"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:cornerRadius="?attr/listPreferredItemHeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateStudentRecord" />
</androidx.constraintlayout.widget.ConstraintLayout>